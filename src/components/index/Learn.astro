<style>
  #index_box {
    min-height: calc(55vh - 3rem);
    padding: 3rem 0;
  }
  #learn_box {
    padding: 1rem 0.5rem;
    min-height: 10rem;
    border-radius: 4px;
    background-image: linear-gradient(
      to right top,
      #39393c,
      #3d3f44,
      #3d3f44,
      #41454d,
      #434b55
    );
    border: 2px solid var(--c2);
  }
  #learn_links {
    direction: ltr;
  }

  #learn p{
    padding:1rem;
  }
  #learn_page_link {
    text-decoration-color: var(--c4);
    transition: text-decoration 0.3s, color 0.3s;
    text-decoration-thickness: 1px;
  }
  #learn_page_link:hover {
    color: #4e725e;
    text-decoration-thickness: 3px;
    text-decoration-color: #476454;
  }
  #learn_links a {
    background: var(--c2);
    color: var(--c4);
    border: 2px solid var(--c4);
    border-radius: 1rem;

    padding: 0.25rem 1.5rem;
    animation: learna 2s ease infinite;
  }
  #learn_links a:hover {
    background: linear-gradient(var(--c2), var(--c2)) padding-box,
      linear-gradient(to top right, var(--c4), var(--c2), var(--c4)) border-box;
    border-radius: 1rem;
    background-size: 300% 300%;
    border: 2px solid transparent;
  }
  @keyframes learna {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @media (min-width: 768px) {
    #index_box {
      min-height: 50vh;
    }
    #learn_box {
      width: 40rem;
    }
  }
</style>
