---
import favicon from "@public/favicon.svg"

// Astro Props
type Props={
  section_title?:string;
  bg_color1?: string;
  bg_color2?: string;
  bg_color3?: string;
  text_color1?: string;
  text_color2?: string;
  text_color3?: string;
  logo_color?: string;
  link_color1?: string;
  link_color2?: string;
  link_color3?: string;
};
const {
  section_title= "",
  bg_color1="bgc2",
  bg_color2="",
  bg_color3="",

  text_color1="",
  text_color2="",
  text_color3="",

  logo_color="tc3",

  link_color1="tc2",
  link_color2="tc2",
  link_color3="tc2",

} = Astro.props;
const sub_header_style = "flex aitems-center low-gap";
---
<header class=`${bg_color1}`>
  <div id="header" class="vbox flex jcontent-between aitems-center">

    <div id="header-right" class=`${link_color1} ${sub_header_style} mid-gap`>
      <a href="/" id="site_logo" class=`${logo_color} text-medium`> کاسپین وب </a>
      <a href="/document/" id="section_title" class=`${logo_color} `> {section_title} </a>
      <slot name="header-right"/>
    </div>

    <div id="header-middle" class=`${link_color2} ${sub_header_style}`>
      <slot name="header-middle"/>
    </div>
    
    <div id="header-left" class=`${link_color3} ${sub_header_style}`>
      <slot name="header-left"/>
    </div>

  </div>
</header>


<style>
  header{
    position:sticky;top:0;z-index:2;
    box-shadow: 2px 2px 2px 2px rgba(0,0,0,0.1);
    border-bottom:2px solid var(--c4);
  }
  #header{height:3rem;}
  #header a{color:var(--c1);}

  a#site_logo{color:var(--c4);font-weight:bolder;font-size:medium;}


</style>

