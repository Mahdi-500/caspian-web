---
import HeaderEyes from "./HeaderEyes.astro";
import HeaderLinks from "./HeaderLinks.astro";
---
<header class="bc2">
  <div id="header" class="flex vbox jcontent-between">

    <div class="header-right">
      
      <div class="header-logo flex low-gap">
        <a href="" class="header-logo-link tc3"> کاسپین وب </a>
        <a href="" class="header-logo-link tc1"> آموزش </a>
      </div>
      
      <p class="header-space tc1 sm-hide"> | </p>

      <HeaderLinks class="flex aitems-center low-gap sm-hide"/>
    </div>

    <div class="header-left">
      <HeaderEyes class=""/>
      <div class="header-logos sm-hide">
        <a href="" target="_blank" rel="noopener noreferrer" class="flex aitems-center">
          <img src="/index/github.svg" alt="github logo icon" class="header-github-icon">
        </a>
      </div>
    </div>

  </div>
</header>

<script type="module">
  const header_eyes = document.querySelector("#header-eyes")
</script>

<style>
  header{
    width: 100vw;
    height: 3rem;

    position:sticky;
    top: 0px;
    z-index: 2;

    display:flex;
    align-items:center;
  }

  .header{
    display:flex;
    align-items:center;
  }
  .header-right{
    display:flex;
    align-items:center;
    gap:8px;
  }
  .header-logo > a{
    text-decoration:none;
    font-size:large;
  }
  .header-space{
    cursor: default;
  }
  .header-logo-link{transition:transform 0.3s ease-in;}
  .header-logo-link:hover{transform:translate(0,-4px);}
  
  .header-github-icon{width:2rem;transition:transform 0.3s ease-in;}
  .header-github-icon:hover{transform:translate(0,-4px);}
</style>