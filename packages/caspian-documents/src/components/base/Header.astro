---
import HeaderLinks from "./HeaderLinks.astro";
---
<div id="header" class="bc1 box flex aitems-center jcontent-between">

  <div id="right_subheader" class="flex aitems-center low-gap">
    <div id="header_title" class="flex low-gap">
      <a href="/" id="title" class=""> کاسپین وب </a>
      <a href="/documents/"id="alt-title" class=""> داکیومنت </a>
    </div>
    <p id="header_logo-space" class="tc2 sm-hide"> | </p>
    <HeaderLinks class="flex aitems-center mid-gap sm-hide"/>
  </div>

  <div id="left_subheader">

  </div>
  
</div>

<style>
  :root{--c1:#503c24;--c2:#d4d0c9;--c3:#090C08;--c4:#4D9078;--c5:#A23E48;}/* Rust Color Pallete */
  /* Headers */
  #header{
    height:3rem;
  }
  #right_subheader a{
    text-decoration:none;
  }
  #left_subheader{}

  /* Titles */
  a#title{color:var(--c2);}
  a#title:hover{}

  a#alt-title{color:var(--c1);background-color:var(--c2);}
  a#alt-title:hover{}

  a#alt-title{
    padding:0 4px;
    border-radius:3px;
  }
  a#alt-title:hover{text-decoration:underline;}

  a#title{transition:transform 0.3s ease-in;}
  a#title:hover{transform:translate(0,-4px);}
</style>