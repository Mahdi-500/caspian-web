---
import HeaderLinks from "../base/header/HeaderLinks.astro";
---
<div class="index-info">
  <div id="infoTextBox" class="bc">
    <h1 class="tc4"> آموزش , </h1>
    <h1 class="tc1"> رایگان , </h1>
    <h1 class="tc5"> برای همه </h1>
  </div>
  <div id="infoLinkBox">
    <div class="infoLinkBox-links">
      <a href="http://" target="_blank" rel="noopener noreferrer" class=""> آموزش </a>
      <a href="http://" target="_blank" rel="noopener noreferrer" class=""> داکیومنت </a>
      <a href="http://" target="_blank" rel="noopener noreferrer" class=""> بلاگ </a>
      <a href="http://" target="_blank" rel="noopener noreferrer" class=""> گیت هاب </a>
    </div>
  </div>
</div>

<style>
  :root{--c1:#F5FBEF;--c2:#343434;--c3:#63B0CD;--c4:#4D9078;--c5:#A23E48;}
  .index-info{
    display:flex;
  }
  .infoLinkBox-links{
    width:100%;
    height:100%;

    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
    gap:32px;

    font-size: x-large;
    
  }
  .infoLinkBox-links a{
    width:80%;
    color: var(--c2);

    border: 2px solid var(--c2);
    border-radius:8px;

    text-decoration:none;
    text-align:center;
    padding:8px 0;

    transition:color 0.15s ease-in,background 0.15s ease-in;
  }
  .infoLinkBox-links a:hover{
    color: var(--c1);
    background-color: var(--c2);
  }
  #infoTextBox{
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
  }
  #infoLinkBox{
    background-color:palevioletred;
    background: radial-gradient(circle , rgba(238,174,202,1) 10%, rgb(99,176,205,0.65) 90%); 

    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
  }
  @media(max-width:768px){
    .index-info{
     flex-direction:column;
    }
    #infoTextBox,#infoLinkBox{
      width:80vw;
      margin:auto;
    }
    #infoTextBox{
      height: 30vh;
    }
    #infoLinkBox{
      height:60vh;

      border-radius: 20px;
    }
  }
  @media(min-width:768px){
    .index-info{
     flex-direction:row;
    }
    #infoTextBox,#infoLinkBox{
      width:40vw;
      height:80vh;

      padding:32px;

      position:absolute;
      top:10vh;
      z-index: 5;
    }
    #infoTextBox{
      left: 5vw;
    }
    #infoTextBox h1{
      font-size: 3em;
    }
    #infoLinkBox{
      border-radius: 50px 0 0 50px;
    }
  }
  @media(min-width:1560px){
    #infoTextBox,#infoLinkBox{
      width:30vw;
      height:80vh;
    }#infoLinkBox{
      width:25vw;
    }
    #infoTextBox{
      width:70vw;
      left: 5vw;
    }
    #infoTextBox h1{
      font-size: 4em;
    }
  }


</style>